                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.Active, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.FreeShipping, htmlAttributes: new { @class = "control-label" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.FreeShipping, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.FreeShipping, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.EnablePasswordLifetime, htmlAttributes: new { @class = "control-label" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.EnablePasswordLifetime, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.EnablePasswordLifetime, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.PurchasedWithProductId, htmlAttributes: new { @class = "control-label" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
