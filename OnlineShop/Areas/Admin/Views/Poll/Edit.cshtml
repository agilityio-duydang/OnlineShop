@using (Html.BeginForm("Edit", "Poll", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="box box-header">
        <div class="content-header clearfix">
            <h1 class="pull-left">
                Cập nhật Poll
                <small>
                    <i class="fa fa-arrow-circle-left"></i>
                    <a href="/Admin/Poll/Index">Trở lại danh sách</a>
                </small>
            </h1>
            <div class="pull-right">
                <button type="submit" name="save" class="btn bg-blue">
                    <i class="fa fa-floppy-o"></i> Save
                </button>
                <button type="submit" name="save-continue" class="btn bg-blue">
                    <i class="fa fa-floppy-o"></i> Save and Continue Edit
                </button>
            </div>
        </div>
    </div>
    <div class="box box-info">
        <div class="box-header with-border">
            <div class="form-horizontal">
                <form class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin</h3>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.Published, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.Published, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.Published, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.ShowOnHomePage, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.ShowOnHomePage, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.ShowOnHomePage, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.AllowGuestsToVote, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(model => model.AllowGuestsToVote, htmlAttributes: new { @class = "flat-red" })
                                    @Html.ValidationMessageFor(model => model.AllowGuestsToVote, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.StartDateUtc, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.StartDateUtc, new { htmlAttributes = new { @class = "form-control", @id = "StartDateUtc", @name = "StartDateUtc" } })
                                    @Html.ValidationMessageFor(model => model.StartDateUtc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.EndDateUtc, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    @Html.EditorFor(model => model.EndDateUtc, new { htmlAttributes = new { @class = "form-control", @id = "EndDateUtc", @name = "EndDateUtc" } })
                                    @Html.ValidationMessageFor(model => model.EndDateUtc, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.SystemKeyword, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.SystemKeyword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SystemKeyword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="label-wrapper">
                                    @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div title="" data-toggle="tooltip" class="ico-help">
                                        <i class="fa fa-question-circle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="form-horizontal">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <i class="fa fa-commenting-o panel-icon"></i>
                        <h3 class="box-title">Poll answers</h3>

                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr style="font-weight:bold">
                                    <td>Name</td>
                                    <td>Number of Vote</td>
                                    <td>Display Order</td>
                                    <td style="text-align:center">Edit</td>
                                    <td style="text-align:center">Delete</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PollAnswers)
                                {
                                    <tr id="row_@item.Id">
                                        <td style="vertical-align: inherit">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td style="vertical-align: inherit">
                                            @Html.DisplayFor(modelItem => item.NumberOfVotes)
                                            @*@Html.ActionLink(item.CustomerId, "Edit", "Customer", new { id = item.CustomerId }, new { id = item.CustomerId })*@

                                        </td>
                                        <td style="vertical-align: inherit">
                                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                                        </td>
                                        <td style="vertical-align:inherit" class="text-center">
                                            <a class="btn btn-primary" href="/Admin/PollAnswer/Edit/@item.Id">
                                                <i class="fa fa-edit"></i>&nbsp;&nbsp;Edit
                                            </a>
                                        </td>
                                        <td style="vertical-align: inherit" class=" text-center">
                                            <a class="btn btn-danger" href="/Admin/PollAnswer/Delete/@item.Id">
                                                <i class="fa fa-remove"></i>&nbsp;&nbsp;Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row margin-bottom">

                        </div>
                        <div class="panel panel-default">
                            <div class="panel panel-heading">
                                Add new record
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-md-offset-3">
                                        <button class="btn btn-primary">Add new record</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="box-footer">
                    </div>
                </div>
            </div>
        </div>
}
