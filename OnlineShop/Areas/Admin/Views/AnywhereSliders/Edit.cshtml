        $(document).ready(function () {
            $('.sidebar-menu').tree()
        })
    </script>
    <script>
        $(document).ready(function () {
            $('#addProductPictureAlert').attr("data-toggle", "modal").attr("data-target", "#addProductPictureAlert-action-alert")
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#productPictureAddAlert').attr("data-toggle", "modal").attr("data-target", "#productPictureAddAlert-action-alert")
        });
    </script>
    <script>
        $(document).ready(function () {
            $('#addSliderPicture').click(function () {
                var PictureId = $("#PictureId").val();
                var Visible = $("#Visible").val();
                var Url = $("#Url").val();
                var AltAttribute = $("#Alt").val();
                var TitleAttribute = $("#DisplayText").val();
                var DisplayOrder = $("#DisplayOrder").val();

                if (PictureId == 0) {
                    $("#addProductPictureAlert").click();
                    return;
                }

                $('#addSliderPicture').attr('disabled', true);

                var postData = {
                    PictureId: PictureId,
                    Visible: Visible,
                    Url: Url,
                    DisplayOrder: DisplayOrder,
                    AltAttribute: AltAttribute,
                    TitleAttribute: TitleAttribute,
                    SliderId: '@Model.Id'
                };
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Admin/AnywhereSliders/PictureAdd",
                    data: postData,
                    success: function (data, textStatus, jqXHR) {
                        if (!data.Result) {
                            return;
                        } else {
                            PictureList();
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $("#productPictureAddAlert").click();
                    },
                    complete: function (jqXHR, textStatus) {
                        $('#addSliderPicture').attr('disabled', false);
                        $("#PictureId").val(0);
                        $("#FileUpload").val('');
                        $("#Alt").val('');
                        $("#DisplayText").val('');
                        $("#Url").val('');
                        $("#DisplayOrder").val(0);
                        $("#Remove").hide();
                        $("#Image").html("<img src='https://admin-demo.nopcommerce.com/images/thumbs/default-image_100.png'/>");
                    }
                });
            });
        });
    </script>
    <script>
        function PictureList() {
            $("#PictureList").empty();
                var postData = {
                    SliderId: '@Model.Id'
                };
            $.ajax({
                url: "/Admin/AnywhereSliders/PictureList",
                type: "POST",
                dataType: "html",
                data: postData,
                success: function (data) {
                    $("#PictureList").html(data);
                    $("#PictureList").show();
                }
            });
        }
    </script>
    <script>
        $(document).ready(function () {
            $("#Upload").click(function () {
                var formData = new FormData();
                var totalFiles = document.getElementById("FileUpload").files.length;
                for (var i = 0; i < totalFiles; i++) {
                    var file = document.getElementById("FileUpload").files[i];

                    formData.append("FileUpload", file);
                }
                $.ajax({
                    type: "POST",
                    url: '/Admin/Picture/AsyncUpload',
                    data: formData,
                    dataType: 'json',
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        if (response.success) {
                            $("#Image").html("<img src='" + response.imageUrl + "' style='width: 100px ; height: 100px'/>");
                            $("#PictureId").val(response.pictureId);
                            $("#Remove").show();
                        }
                    },
                    error: function (error) {
                        alert("Upload Picrure Not Success !");
                    }
                });
            });
            $("#Remove").click(function (e) {
                $("#Image").html("<img src='https://admin-demo.nopcommerce.com/images/thumbs/default-image_100.png'/>");
                $("#PictureId").val(0);
                $("#FileUpload").val('');
                $(this).hide();
            });
        });

    </script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2').select2()

            //Datemask dd/mm/yyyy
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            //Datemask2 mm/dd/yyyy
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()

            //Date range picker
            $('#reservation').daterangepicker()
            //Date range picker with time picker
            $('#reservationtime').daterangepicker({ timePicker: true, timePickerIncrement: 30, locale: { format: 'MM/DD/YYYY hh:mm A' } })
            //Date range as a button
            $('#daterange-btn').daterangepicker(
                {
                    ranges: {
                        'Today': [moment(), moment()],
                        'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                        'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                        'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                        'This Month': [moment().startOf('month'), moment().endOf('month')],
                        'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
                    },
                    startDate: moment().subtract(29, 'days'),
                    endDate: moment()
                },
                function (start, end) {
                    $('#daterange-btn span').html(start.format('MMMM D, YYYY') + ' - ' + end.format('MMMM D, YYYY'))
                }
            )

            //Date picker
            $('#datepicker').datepicker({
                autoclose: true
            })

            //iCheck for checkbox and radio inputs
            $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
