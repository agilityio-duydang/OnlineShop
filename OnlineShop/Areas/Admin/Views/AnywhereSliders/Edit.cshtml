                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(model => model.SliderImages.FirstOrDefault().Visible, htmlAttributes : new { @class = "flat-red" })
