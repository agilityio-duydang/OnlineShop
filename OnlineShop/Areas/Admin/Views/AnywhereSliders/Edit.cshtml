                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.SliderImages.FirstOrDefault().DisplayOrder, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            @Html.EditorFor(model => model.SliderImages.FirstOrDefault().DisplayOrder, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SliderImages.FirstOrDefault().DisplayOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.SliderImages.FirstOrDefault().Url, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.SliderImages.FirstOrDefault().Url, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SliderImages.FirstOrDefault().Url, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.SliderImages.FirstOrDefault().Alt, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.SliderImages.FirstOrDefault().Alt, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SliderImages.FirstOrDefault().Alt, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            <div class="label-wrapper">
                                                @Html.LabelFor(model => model.SliderImages.FirstOrDefault().DisplayText, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div title="" data-toggle="tooltip" class="ico-help">
                                                    <i class="fa fa-question-circle"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.SliderImages.FirstOrDefault().DisplayText, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SliderImages.FirstOrDefault().DisplayText, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">                                    
                                    <div class="col-md-3 col-md-offset-3">
                                        <button id="addSliderPicture" type="button" class="btn btn-primary">Add slider picture</button>
                                    </div>
                                </div>
                            </div>
                            <div id="addProductPictureAlert-action-alert" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addProductPictureAlert-action-alert-title">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                            <h4 class="modal-title" id="addProductPictureAlert-action-alert-title">Information</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="additional-text" id="addProductPictureAlert-info"></div>
                                            Upload picture first.
                                        </div>
                                        <div class="modal-footer">
                                            <span class="btn btn-primary pull-right" data-dismiss="modal">Ok</span>
